{{!< default}}

{{#post}}

<article id="{{id}}" class="{{post_class}}">
	<div class="post-tags">{{tags separator="&nbsp;"}}</div>
	<div class="post-date">{{date published_at format='MMMM Do, YYYY'}}</div> 
	<h1 class="post-title">{{title}}</h1>

	{{{content}}}

</article>

<div id="comments">
	Comment <a href="https://twitter.com/collingsruth">@collingsruth</a>
</div>

{{/post}}